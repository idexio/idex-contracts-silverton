{
  "name": "@idexio/idex-contracts-p2p",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idexio/idex-contracts-p2p.git"
  },
  "version": "0.2.3",
  "description": "Collects source code, tests, and documentation for the IDEX P2P and Blackcomb release Ethereum contracts",
  "homepage": "https://github.com/idexio/idex-contracts-p2p",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "directories": {
    "lib": "build/lib"
  },
  "files": [
    "build/contracts/Custodian.json",
    "build/contracts/Exchange.json",
    "build/contracts/ExchangeEventLogger.json",
    "build/contracts/Exchange_whistler.json",
    "build/contracts/FaucetToken.json",
    "build/contracts/Governance.json",
    "build/lib",
    "build/types"
  ],
  "scripts": {
    "build": "yarn build:clean && yarn build:sol && yarn build:generate-types && yarn build:ts",
    "build:clean": "rm -rf build && rm -rf artifacts",
    "build:sol": "truffle compile && hardhat compile && find ./artifacts/external_contracts -name \\*.json -a -not -name \\*.dbg.json -exec cp {} build/contracts \\;",
    "build:generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "build:ts": "tsc -p .",
    "lint:markdown": "markdownlint README.md",
    "prettier": "prettier --write **/*.sol",
    "test": "multi='spec=- json=./coverage/mocha-summary.json' truffle test ./build/tests/contracts/*.test.js",
    "test:coverage": "multi='spec=- json=./coverage/mocha-summary.json' truffle run coverage --file=\"./build/tests/contracts/*.test.js\""
  },
  "dependencies": {
    "@idexio/pancake-swap-core": "^0.1.0-alpha.1",
    "bignumber.js": "^9.0.1",
    "chai": "^4.2.0",
    "ethers": "^5.0.31",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@openzeppelin/contracts": "4.0.0-rc.0",
    "@typechain/truffle-v5": "^4.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-truffle": "^0.3.1",
    "hardhat": "^2.1.2",
    "husky": "^4.3.8",
    "markdownlint-cli": "0.26.0",
    "mocha": "^8.2.1",
    "mocha-multi": "^1.1.3",
    "prettier": "^2.2.1",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "prettier-plugin-solidity": "1.0.0-beta.6",
    "solidity-coverage": "^0.7.16",
    "truffle": "5.2.3",
    "ts-generator": "^0.1.1",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "typechain": "4.0.3",
    "typescript": "4.1.3",
    "web3": "1.3.3",
    "web3-core": "1.3.3",
    "web3-eth-contract": "1.3.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint:markdown && yarn build:clean && yarn build && yarn test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
